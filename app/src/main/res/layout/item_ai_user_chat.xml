<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tv_time_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/ai_backage_shape_selector"
        android:padding="10dp"
        android:text="2020.10.03"
        android:textColor="@color/color_white"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_content_user_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/iv_user_image"
            android:background="@drawable/ai_bg_chat_to_voice_playing"
            android:clickable="true"
            android:focusable="true"
            android:padding="21dp"
            android:gravity="left|center"
            android:lineSpacingExtra="2dp"
            android:text="用户输入"
            android:textColor="@color/color_white"
            android:textSize="20dp"
            />

        <ImageView
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:src="@drawable/ai_icon_user_head"
            />


    </LinearLayout>

</LinearLayout>